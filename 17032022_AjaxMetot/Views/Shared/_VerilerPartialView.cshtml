@model List<string>

@foreach (var item in Model)
{ 
    <li id="@Model.IndexOf(item)" class="list-group-item">
    @*<a href="#" class="btn btn-danger btn-xs">Sil</a>*@
    @Ajax.ActionLink("Sil","DataSil",
    new { id=Model.IndexOf(item) },
    new AjaxOptions() { HttpMethod="GET",
        LoadingElementId = "loading",
        LoadingElementDuration = 1000,
        UpdateTargetId=Model.IndexOf(item).ToString(),
        InsertionMode =InsertionMode.ReplaceWith
    },new { @class = "btn btn-danger btn-xs" })
    @item</li>
}
